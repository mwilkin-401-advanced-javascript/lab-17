{
  "name": "lab-17",
  "version": "1.0.0",
  "description": "Event driven messaging server",
  "main": "app.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "start": "node server.js",
    "start index": "node index.js",
    "lint": "eslint **/*.js",
    "test": "jest --verbose --coverage",
    "test-watch": "jest --watchAll --verbose --coverage",
    "jsdoc": "jsdoc -c ./docs/config/jsdoc.config.json .",
    "push-check": "npm test && npm run lint",
    "build-docs": "jsdoc -c ./docs/config/jsdoc.config.json . && open ./docs/index.html"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mwilkin-401-advanced-javascript/lab-17.git"
  },
  "author": "Matt Wilkin",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mwilkin-401-advanced-javascript/lab-17/issues"
  },
  "homepage": "https://github.com/mwilkin-401-advanced-javascript/lab-17#readme",
  "dependencies": {
    "eslint": "^5.16.0",
    "jest": "^24.8.0",
    "jsdoc": "^3.6.2"
  }
}
